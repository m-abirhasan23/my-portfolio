---
import Hamburger from "../components/Hamburger.astro";
import { navData } from "../data/data.js";
---

<header class="item-center">
  <div class="container">
    <div class="logo">Abir Hasan</div>
    <nav class="navbar">
      {navData.map((link) => <a href={link.path}>{link.name}</a>)}
    </nav>
    <div class="menu-btn acive">
      <Hamburger />
    </div>
  </div>
</header>
<style>
  header {
    min-height: 80px;

    display: grid;
    place-items: center;
    width: 100%;
    -webkit-animation: slide-right 1s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
    animation: slide-right 1s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
  }
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 90%;
    height: 100%;
    margin-inline: auto;
  }

  .logo {
    font-family: var(--font-secondary);
    text-transform: uppercase;
    font-size: var(--fs-regular);
    width: 10%;
    line-height: 120%;
    color: hsl(var(--clr-white));
  }
  nav {
    width: 70%;
    display: flex;
    justify-content: space-around;
    align-items: center;
  }
  a {
    color: hsl(var(--clr-white));
    text-decoration: none;
    text-transform: uppercase;
    font-size: var(--fs-regular);
    font-family: var(--font-secondary);
    transition: color 300ms cubic-bezier(0.17, 1.01, 0.84, 0.04);
  }
  a:is(:hover, :focus) {
    color: hsl(var(--clr-accent));
  }
  a.active {
    font-weight: 500;
    color: hsl(var(--clr-accent));
  }

  @-webkit-keyframes slide-right {
    0% {
      -webkit-transform: translateX(-100px);
      transform: translateX(-100px);
    }
    100% {
      -webkit-transform: translateX(0);
      transform: translateX(0);
    }
  }
  @keyframes slide-right {
    0% {
      -webkit-transform: translateX(-100px);
      transform: translateX(-100px);
    }
    100% {
      -webkit-transform: translateX(0);
      transform: translateX(0);
    }
  }

  .menu-btn {
    display: none;
  }

  @media (max-width: 600px) {
    header {
      position: relative;
      min-height: 120px;
    }
    .navbar {
      flex-direction: column;
      position: absolute;
      top: 125px;
      justify-content: flex-start;
      align-items: flex-start;
      background-color: hsl(var(--clr-accent));
      width: 100%;
      left: -100%;
      z-index: 999;
      height: 90vh;
      transition: left 300ms ease-in;
    }
    .navbar.active {
      left: 0;
    }
    .logo {
      font-size: var(--fs-lg);
      scale: 0.8;
    }
    a {
      font-size: var(--fs-lg);
      padding-left: 1rem;
    }
    a:first-child {
      padding-top: 1.5em;
    }
    .menu-btn {
      display: block;
    }
  }
</style>

<script>
  const openMenu = document.querySelector(".openMenu");
  const menuBtn = document.querySelector(".menu-btn");
  const navbar = document.querySelector(".navbar");
  menuBtn.addEventListener("click", () => {
    navbar.classList.toggle("active");
  });
</script>
