---
const { item } = Astro.props;
---

<figure>
  <figcaption>{item.name}</figcaption>
  <small>{item.level}</small>
</figure>

<style>
  figure {
    width: 30%;
    padding: 0.5rem;
    background-color: hsla(var(--clr-accent), 0.1);
    border-radius: 5px;
    position: relative;
    z-index: 3;
    border: 1px solid hsla(var(--clr-accent), 0.1);
    opacity: 0.7;
    cursor: pointer;

    transition: border 400ms ease, opacity 400ms ease;
  }
  figure:hover {
    border: 1px solid hsla(var(--clr-accent), 0.9);
    opacity: 1;
  }
  figcaption {
    font-size: var(--fs-md);
    text-transform: uppercase;
    color: hsl(var(--clr-white));
    font-family: var(--font-primary);
  }
  small {
    font-size: var(--fs-sm);
    text-transform: capitalize;
    color: hsla(var(--clr-white), 0.5);
    font-family: var(--font-primary);
  }
  @media (max-width: 600px) {
    figure {
      width: 31%;
    }
  }
</style>
